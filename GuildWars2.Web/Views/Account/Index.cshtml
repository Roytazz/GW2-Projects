@using GuildWars2.API.Model.Character

@model List<Character>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{/*<div class="row">
    @foreach (var character in Model) {
        @Html.Partial("_Character", character)
    }
</div>*/}

@for (int i = 0; i < Model.Count; i++) {
    if(i % 2 == 0) {
        @Html.Raw("<div class='row no-margin'>");
        @Html.Partial("_Character", Model[i])
    }
    else { 
        @Html.Partial("_Character", Model[i])
        @Html.Raw("</div>");
    }
}
@if(Model.Count % 2 != 0) { 
    @Html.Raw("</div>");
}