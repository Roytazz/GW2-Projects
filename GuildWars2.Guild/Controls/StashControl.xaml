<UserControl x:Class="GuildWars2Guild.Controls.GoldGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
             xmlns:dockablz="clr-namespace:Dragablz.Dockablz;assembly=Dragablz"
             xmlns:grid="clr-namespace:GuildWars2Guild.Controls.Grids"
             xmlns:viewModel="clr-namespace:GuildWars2Guild.Model"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <dockablz:Layout>
            <dragablz:TabablzControl BorderBrush="{DynamicResource PrimaryHueDarkBrush}">
                <TabItem Header="GOLD">
                    <grid:GoldGrid>
                        <grid:GoldGrid.DataContext>
                            <viewModel:StashViewModel/>
                        </grid:GoldGrid.DataContext>
                    </grid:GoldGrid>
                </TabItem>
                <TabItem Header="ITEMS">
                </TabItem>
            </dragablz:TabablzControl>
        </dockablz:Layout>
    </Grid>
</UserControl>
