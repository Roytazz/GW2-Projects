<UserControl x:Class="GuildWars2Guild.Controls.Settings.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GuildWars2Guild.Controls.Settings"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="510" >
    <DockPanel>
        <TextBox DockPanel.Dock="Top" materialDesign:TextFieldAssist.Hint="Guild API Key" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 		
                  Foreground="White" Margin="10,0" Text="{Binding ApiKey, UpdateSourceTrigger=PropertyChanged, Delay=200}" />
        <Button DockPanel.Dock="Top" Content="Synch Data" Margin="10,10"/>
        <local:PaletteSelectorControl DockPanel.Dock="Top"/>
    </DockPanel>
</UserControl>
