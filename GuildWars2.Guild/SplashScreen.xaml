<Controls:MetroWindow x:Class="GuildWars2Guild.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:widgets="clr-namespace:GuildWars2Guild.Controls.Widgets"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        GlowBrush="{DynamicResource AccentColorBrush}" Title="Loading" Height="200" Width="450" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <materialDesign:DialogHost x:Name="DialogHost" DialogClosing="DialogHost_OnDialogClosing">
        <materialDesign:DialogHost.DialogContent>
            <StackPanel Width="300" Background="#FF4D4D4D">
                <TextBlock TextTrimming="WordEllipsis" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="3" TextAlignment="Center" Foreground="White" FontSize="14">
                    There is not internet connection found! 
                </TextBlock>
                <TextBlock TextTrimming="WordEllipsis" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="3,0,3,3" TextAlignment="Center" Foreground="White" FontSize="14">
                    Without an internet connection the application will be limited on functionalities.
                </TextBlock>
                <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" materialDesign:DialogHost.DialogClosingAttached="DialogHost_OnDialogClosing" Content="Okay"/>
            </StackPanel>
        </materialDesign:DialogHost.DialogContent>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,-5,0,0">
            <TextBlock x:Name="progress_TxtBlock" Text="Loading..." HorizontalAlignment="Center" Margin="0,0,0,5" Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" FontSize="22"/>
            <materialDesign:Card UniformCornerRadius="15" Padding="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Value="50" IsIndeterminate="True"/>
            </materialDesign:Card>
        </StackPanel>
    </materialDesign:DialogHost>
</Controls:MetroWindow>
